    <CheckBox
        android:id="@+id/lostCB"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="176dp"
        app:layout_constraintStart_toStartOf="@id/note"
        app:layout_constraintTop_toBottomOf="@id/note" />

    <CheckBox
        android:id="@+id/foundCB"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/lostCB"
        app:layout_constraintTop_toBottomOf="@id/lostCB"


        />

    <TextView
        android:id="@+id/lostText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Lost"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/lostCB"
        app:layout_constraintTop_toTopOf="@id/lostCB" />

    <TextView
        android:id="@+id/foundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Found"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/foundCB"
        app:layout_constraintTop_toTopOf="@id/foundCB" />


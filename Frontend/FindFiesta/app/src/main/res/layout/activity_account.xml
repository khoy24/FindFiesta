<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".AccountActivity">


    <!-- Navigation Bar -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:alpha="10"
        android:background="?attr/colorSecondary"
        android:elevation="0dp"
        android:orientation="horizontal"
        android:translationZ="-1000dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearlayoutaccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/mapButton"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="?attr/colorTertiary"
                app:circularflow_defaultRadius="100dp"
                app:circularflow_radiusInDP="100dp"
                app:cornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/messagesButton"
                app:layout_constraintStart_toEndOf="@+id/homeButton"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/createPostButton"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="?attr/colorTertiary"
                app:circularflow_defaultRadius="100dp"
                app:circularflow_radiusInDP="100dp"
                app:cornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/homeButton"
                app:layout_constraintStart_toEndOf="@+id/accountButton"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/accountButton"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="?attr/colorTertiary"
                app:circularflow_defaultRadius="100dp"
                app:circularflow_radiusInDP="100dp"
                app:cornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/createPostButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/homeButton"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="?attr/colorTertiary"
                android:elevation="100dp"
                android:translationZ="900000dp"
                app:circularflow_defaultRadius="100dp"
                app:circularflow_radiusInDP="100dp"
                app:cornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mapButton"
                app:layout_constraintStart_toEndOf="@+id/createPostButton"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/messagesButton"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="?attr/colorTertiary"
                app:circularflow_defaultRadius="100dp"
                app:circularflow_radiusInDP="100dp"
                app:cornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mapButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="57dp"
                android:layout_height="44dp"
                android:layout_marginEnd="21dp"
                app:layout_constraintBottom_toBottomOf="@+id/homeButton"
                app:layout_constraintEnd_toEndOf="@+id/homeButton"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/homeButton"
                app:layout_constraintTop_toTopOf="@+id/homeButton"
                app:layout_constraintVertical_bias="0.384"
                app:srcCompat="@drawable/home_icon" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="32dp"
                android:layout_height="34dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/messagesButton"
                app:layout_constraintHorizontal_bias="0.369"
                app:layout_constraintStart_toStartOf="@+id/messagesButton"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/messages_icon" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="48dp"
                android:layout_height="45dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/mapButton"
                app:layout_constraintStart_toStartOf="@+id/mapButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.52"
                app:srcCompat="@drawable/map_icon" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="42dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/accountButton"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="@+id/accountButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.464"
                app:srcCompat="@drawable/account_icon" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="35dp"
                android:layout_height="44dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/createPostButton"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="@+id/createPostButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.538"
                app:srcCompat="@drawable/create_post_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/GreetingText"
        android:layout_width="302dp"
        android:layout_height="138dp"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/account_icon"
        app:layout_constraintBottom_toTopOf="@+id/myPostsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="192dp"
        android:layout_height="46dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="Settings"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userListButton"
        app:layout_constraintVertical_bias="0.161" />

    <Button
        android:id="@+id/userListButton"
        android:layout_width="194dp"
        android:layout_height="46dp"
        android:layout_marginBottom="148dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="Followers"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/followingBtn"
        app:layout_constraintVertical_bias="0.191" />

    <Button
        android:id="@+id/myPostsButton"
        android:layout_width="192dp"
        android:layout_height="47dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="My posts"
        app:layout_constraintBottom_toTopOf="@+id/settingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GreetingText"
        app:layout_constraintVertical_bias="0.19" />

    <Button
        android:id="@+id/editProfilePicButton"
        android:layout_width="163dp"
        android:layout_height="41dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="Edit Profile Pic"
        app:layout_constraintBottom_toTopOf="@+id/myPostsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture"
        app:layout_constraintVertical_bias="0.037" />

    <Button
        android:id="@+id/followingBtn"
        android:layout_width="192dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="Following"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.553" />

    <Button
        android:id="@+id/reportsButton"
        android:layout_width="192dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="Reports"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsButton" />

    <Button
        android:id="@+id/modRequestsButton"
        android:layout_width="192dp"
        android:layout_height="46dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="Moderator Requests"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportsButton" />

    <Button
        android:id="@+id/completedReportsButton"
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="Completed Reports"
        app:layout_constraintBottom_toTopOf="@+id/settingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myPostsButton" />

    <Button
        android:id="@+id/modApplyButton"
        android:layout_width="184dp"
        android:layout_height="41dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="Apply to be a mod"
        app:layout_constraintBottom_toTopOf="@+id/modRequestsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsButton" />


</androidx.constraintlayout.widget.ConstraintLayout>

